<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Data table</h1>
    <table border="1">
        <tr>
            <td>No</td>
            <td>name</td>
            <td>age</td>
            <td>action</td>
        </tr>

        <% record.map((v,i)=>{ %>
            <tr>
                <td>
                    <%= ++i %>
                </td>
                <td>
                    <%= v.name %>
                </td>
                <td>
                    <%= v.age %>
                </td>
                <td><a href="/deleteData/<%= --i%>"><button>X</button></a>
                    <a href="/updateData/?position=<%= i %>"><button>update</button></a>
                </td>
            </tr>
            <% })%>

    </table>

    <h2>Form</h2>

    <form action="/add" method="post">
        <table border="1">
            <tr>
                <td>Name</td>
                <td><input type="text" name="name" id=""></td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input type="number" name="age" id=""></td>
            </tr>
            <tr>
                <td><input type="submit" value="submit" name="submit"></td>
            </tr>
        </table>
    </form>
</body>

</html>