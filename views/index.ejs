<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body style="background-color: rgb(50, 50, 50); color: aliceblue;">
    <h1>Data table</h1>
    <table border="1">
        <tr>
            <td>No</td>
            <td>name</td>
            <td>age</td>
            <td>gender</td>
            <td>Hobby</td>
            <td>City</td>
            <td>Address</td>
            <td>action</td>
        </tr>

        <% record.map((v,i)=>{ %>
            <tr>
                <td>
                    <%= ++i %>
                </td>
                <td>
                    <%= v.name %>
                </td>
                <td>
                    <%= v.age %>
                </td>
                <td>
                    <%= v.gender %>
                </td>
                <td>
                    <%= v.hobby %>
                </td>
                <td>
                    <%= v.city %>
                </td>
                <td>
                    <%= v.address %>
                </td>
                <td><a href="/deleteData/<%= v.id %>"><button>X</button></a>
                    <a href="/updateData/?position=<%= v.id %>"><button>update</button></a>
                </td>
            </tr>
            <% })%>

    </table>

    <h2>Form</h2>

    <form action="/add" method="post">
        <table border="1">
            <tr>
                <td>Name</td>
                <td><input type="text" name="name" id=""></td>
            </tr>
            <tr>
                <td>Age</td>
                <td><input type="number" name="age" id=""></td>
            </tr>
            <tr>
                <td>gender</td>
                <td>
                    <input type="radio" name="gender" value="male" >Male
                    <input type="radio" name="gender" value="female">Female
                </td>
            </tr>
            <tr>
                <td>hobby</td>
                <td>
                    <input type="checkbox" name="hobby" id="" value="reading">Reading
                    <input type="checkbox" name="hobby" id="" value="writing">Writing
                    <input type="checkbox" name="hobby" id="" value="coding">Coding
                </td>
            </tr>
            <tr>
                <td>City</td>
                <td>
                    <% var city=['surat','rajkot','baroda'] %>
                    <select name="city" id="">
                        <option value="-1">select your city</option>
                        <% city.map((v,i)=>{ %>
                        <option value="<%= v %>"><%= v %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Address</td>
                <td>
                    <textarea name="address" id=""></textarea>
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="submit" name="submit"></td>
            </tr>
        </table>
    </form>
</body>

</html>